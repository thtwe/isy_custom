        <record id="capex_view_tree" model="ir.ui.view">
            <field name="name">budget.capex.tree</field>
            <field name="model">budget.capex</field>
            <field name="arch" type="xml">
                <tree string="Capex Tree" default_order="sequence">
                    <field name="sequence" invisible="1"/>
                    <field name="name" />
                    <field name="jul_total" sum="Total" widget="integer"/>
                    <field name="aug_total" sum="Total" widget="integer"/>
                    <field name="sep_total" sum="Total" widget="integer"/>
                    <field name="oct_total" sum="Total" widget="integer"/>
                    <field name="nov_total" sum="Total" widget="integer"/>
                    <field name="dec_total" sum="Total" widget="integer"/>
                    <field name="jan_total" sum="Total" widget="integer"/>
                    <field name="feb_total" sum="Total" widget="integer"/>
                    <field name="mar_total" sum="Total" widget="integer"/>
                    <field name="apr_total" sum="Total" widget="integer"/>
                    <field name="may_total" sum="Total" widget="integer"/>
                    <field name="jun_total" sum="Total" widget="integer"/>
                    <field name="actual_total" sum="Acutal Total" widget="integer" />   
                    <field name="budget_total" sum="Budget Total" widget="integer" />
                    <field name="percentage" />
                </tree>
            </field>
        </record>

        <record id="capex_view_form" model="ir.ui.view">
            <field name="name">budget.capex.form</field>
            <field name="model">budget.capex</field>
            <field name="arch" type="xml">
                <form string="Capex Form">
                    <sheet>
                        <h1>
                            <field name="name" required="1" placeholder="e.g. Application Fees" />
                        </h1>
                        <group>
                            <group name="budget_informations">
                                <field name="budget_total" widget="integer" />
                                <field name="actual_total"  widget="integer" />
                                <field name="percentage" />
                            </group>
                            <group name="misc">
                                <field name="sequence" />
                                <field name="capex_type_id" widget="selection"/>
                                <field name="from_date"/>
                                <field name="to_date" />
                            </group>
                            <group name="total_left">
                                <field name="jul_total" widget="integer"/>
                                <field name="aug_total" widget="integer"/>
                                <field name="sep_total" widget="integer"/>
                                <field name="oct_total" widget="integer"/>
                                <field name="nov_total" widget="integer"/>
                                <field name="dec_total" widget="integer"/>
                            </group>
                            <group name="total_right">
                                <field name="jan_total" widget="integer"/>
                                <field name="feb_total" widget="integer"/>
                                <field name="mar_total" widget="integer"/>
                                <field name="apr_total" widget="integer"/>
                                <field name="may_total" widget="integer"/>
                                <field name="jun_total" widget="integer"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="July" name="capex_july_lines">
                                <field name="jul_line_ids" nolable="1">
                                    <tree string="July" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="August" name="capex_august_lines">
                                <field name="aug_line_ids" nolable="1">
                                    <tree string="August" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="September" name="capex_september_lines">
                                <field name="sep_line_ids" nolable="1">
                                    <tree string="Septembere" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="October" name="capex_october_lines">
                                <field name="oct_line_ids" nolable="1">
                                    <tree string="October" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="November" name="capex_november_lines">
                                <field name="nov_line_ids" nolable="1">
                                    <tree string="November" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="December" name="capex_december_lines">
                                <field name="dec_line_ids" nolable="1">
                                    <tree string="December" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="January" name="capex_january_lines">
                                <field name="jan_line_ids" nolable="1">
                                    <tree string="January" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="February" name="capex_february_lines">
                                <field name="feb_line_ids" nolable="1">
                                    <tree string="February" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="March" name="capex_march_lines">
                                <field name="mar_line_ids" nolable="1">
                                    <tree string="March" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="April" name="capex_april_lines">
                                <field name="apr_line_ids" nolable="1">
                                    <tree string="April" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="May" name="capex_may_lines">
                                <field name="may_line_ids" nolable="1">
                                    <tree string="May" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="June" name="capex_june_lines">
                                <field name="jun_line_ids" nolable="1">
                                    <tree string="June" editable="bottom">
                                        <field name="account_id"/>
                                        <field name="actual_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

